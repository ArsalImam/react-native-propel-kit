    "@types/react": "^16.8.23",
    "@types/react-native": "^0.60.2",
    "@types/react-test-renderer": "^16.8.2",
    "react": "16.8.6",
    "react-native": "0.60.3",
    "react-native-testing-library": "^1.11.1",
    "react-test-renderer": "16.8.6",
    "typescript": "^3.5.3"
  }
